                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="colorlib-services">
        <div class="container">
            <div class="row text-center">
                <h2 class="bold">Package</h2>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="services-flex">
                        <div class="one-third">
                            <div class="row">
                                <div class="col-md-12 col-md-offset-0 animate-box intro-heading">
                                    <span>Package</span>
                                    <h2>Kullanım Paketleri</h2>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="rotate">
                                        <h2 class="heading">Package</h2>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="col">
                                        <div class="services animate-box">
                                            @foreach (var item in Model.Item1)
                                            {

                                                <div class="col-md-12">
                                                    <div class="services animate-box">
                                                        @if (item.IsActived == true)
                                                        {
                                                            <div class="col-md-12">
                                                                <div class="services animate-box">
                                                                    <h3>@item.Name</h3>
                                                                    <ul>
                                                                        <li>Paket Süresi @Html.DisplayFor(modelItem => item.PackageTime)</li>
                                                                        <li>Kişi Sayısı  @item.PersonnelNumber</li>
                                                                        <li>Paket Fiyatı  @item.Price</li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>

                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="one-forth services-img" style="background-image: url('/wwwroot/paket.jpg');">

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

