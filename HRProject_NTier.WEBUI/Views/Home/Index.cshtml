    <div id="colorlib-testimony">
        <div class="container">
            <div class="row text-center">
                <h2 class="bold">Comment</h2>
            </div>
            <div class="row">
                <div class="col-md-12 col-md-offset-0 text-center animate-box intro-heading">
                    <span>Comment</span>
                    <h2>Yönetici Yorumları</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="rotate">
                        <h2 class="heading">Yorumlar</h2>
                    </div>
                </div>
            </div>
            <div class="row animate-box">
                @foreach (var item in Model.Item2)
                {
                    @if (item.IsApproved == true)
                    {
                        <div class="owl-carousel">

                            <div class="item">
                                <div class="col-md-12 text-center">
                                    <div class="testimony">
                                        <blockquote>
                                            <img src="~/images/@item.Manager.ProfileImage" style="width:50px; height:50px; text-align:center; " class="img-circle resimBoyut" />
                                            <p>@Html.Raw(item.Comment)</p>

                                            <span>  &mdash; @item.Manager.Name @item.Manager.Surname</span>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="col-md-12 text-center">
                                    <div class="testimony">
                                        <blockquote>
                                            @*<p>"@item.Comment</p>
