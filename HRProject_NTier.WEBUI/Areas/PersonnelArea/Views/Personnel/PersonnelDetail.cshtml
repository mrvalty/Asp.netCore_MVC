@model HRProject_NTier.CORE.Entities.Personnel
@{
    ViewData["Title"] = "PersonnelDetail";
    Layout = "~/Areas/PersonnelArea/Views/Shared/_PersonnelLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Personel Bilgileri</title>
</head>

<body>
    <div style="">
        <h3><label>@Model.Name  @Model.Surname</label></h3>
        <input type="hidden" value="@Model.ID" />
        <hr />
    </div>
    <hr />
    <div class="row" style="">
        <div class="col-md-8">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label><br />
                    <p>@Model.Name</p>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label><br />
                    <p>@Model.Surname</p>
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>
            <div class=" col-md-4">
                <div class="form-group">
                    <label asp-for="MailAddress" class="control-label"></label><br />
                    <p>@Model.MailAddress</p>
                    <span asp-validation-for="MailAddress" class="text-danger"></span>
                </div>
            </div>
            <div class=" col-md-4">
                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label"></label><br />
                    <p>@Model.BirthDate.ToShortDateString()</p>
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="">
        <div class="col-md-8">
            <div class="col-md-4">
                <label asp-for="Password" class="control-label"></label><br />
                <p>@Model.Password</p>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="CompanyName" class="control-label"></label><br />
                <p> @Model.CompanyName</p>
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row" style="">
        <div class="col-md-8">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="HiredDate" class="control-label"></label><br />
                    <p>@Model.HiredDate</p>
                    <span asp-validation-for="HiredDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label><br />
                    <p>@Model.Gender</p>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="">
        <div class="col-md-8">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label><br />
                    <p>@Model.City</p>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Telephone" class="control-label"></label><br />
                    <p>@Model.Telephone</p>
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="">
        <div class="col-md-8">
            <div class="col-md-4">
                <label asp-for="Address" class="control-label"></label><br />
                <p>@Model.Address</p>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Department" class="control-label"></label><br />
                <p> @Model.Department</p>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
        
    </div>
    <div class="row" style="">
        <div class="col-md-8">

            <div class="col-md-4">
                <label asp-for="Salary" class="control-label"></label><br />
                <p> @Model.Salary</p>
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
          
        </div>
        
    </div>
    <div class="row">
        <div class="col-md-8">
   
                <a asp-action="UpdatePersonnel" asp-route-id="@Model.ID">Düzenle</a>

        </div>
    </div>
</body>
</html>
