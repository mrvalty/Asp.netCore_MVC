@model IEnumerable<HRProject_NTier.CORE.Entities.Permission>

@{
    ViewData["Title"] = "ListPermission";
    Layout = "~/Areas/PersonnelArea/Views/Shared/_PersonnelLayout.cshtml";

    IEnumerable<Permission> süre = ViewData["Kullanılansure"] as IEnumerable<Permission>;
}

<h2>İzin Listesi</h2>
<div>
    <a class="btn btn-outline-success" asp-action="AddPermissionAsPersonel" asp-route-id="">İzin Ekle</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.StartedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>

            <th>
               Red Mesaj Açıklaması
            </th>


            <th colspan="3">
                İzin Durumu
            </th>
            

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>@item.StartedDate.ToShortDateString()</td>

            <td>  @item.EndDate.ToShortDateString()</td>

            <td>
                @item.Description
            </td>

            <td>
                @if (item.IsActived == true && item.IsApproved == false)
                {
                    <span class="btn btn-warning">
                        Onay Bekliyor
                    </span>
                }
            </td>
            <td>
                @if (item.IsActived == false && item.IsApproved == true)
                {
                    <span class="btn btn-success">
                        Onaylandı
                    </span>
                }
            </td>
            <td>
                @if (item.IsActived == false && item.IsApproved == false)
                {
                    <span class="btn btn-danger">
                        Reddedildi
                    </span>
                }
            </td>


        </tr>
        }


        </tbody>
    </table>
