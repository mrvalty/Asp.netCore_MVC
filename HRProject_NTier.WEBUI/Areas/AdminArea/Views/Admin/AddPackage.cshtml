@model AddPackage
<div class="container mb-3 mt-3">

    <h2 class="text-left" style="margin-bottom: 50px; margin-top:100px;"><b><strong>Paket Ekle</strong></b></h2>
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <form asp-controller="Admin" asp-action="AddPackage" asp-area="AdminArea" method="post" enctype="multipart/form-data">

            <label>Paket Adı:</label><br>
            <input type="text" style="width:825px;height: 40px" asp-for="Name"></>
            <span asp-validation-for="Name" class="text-danger"></span>
            <br><br>

            <label>Personel Sayısı:</label><br>
            <input type="text" style="width:825px;height: 40px" asp-for="PersonnelNumber"></>
            <span asp-validation-for="PersonnelNumber" class="text-danger"></span>
 

            <label>Fiyatı</label><br>
            <input type="text" style="width:825px;height: 40px" asp-for="Price"></>
            <span asp-validation-for="Price" class="text-danger"></span>
            <br><br>


            <label for=""> Tipi: </label><br>
            <select style="width:825px" asp-for="Time" class="form-control" asp-items="@Html.GetEnumSelectList<Time>()"></select>

            <br><br>

            <button type="submit" value="Save">Gönder</button>

        </form>
    </div>
</div>

