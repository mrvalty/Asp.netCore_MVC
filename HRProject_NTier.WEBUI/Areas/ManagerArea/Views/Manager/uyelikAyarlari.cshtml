
@{
    ViewData["Title"] = "uyelikAyarlari";
    Layout = "~/Areas/ManagerArea/Views/Shared/_ManagerLayout.cshtml";
}


@*https://localhost:44379/Manager/hesabiPasifeAl*@

<h2>Üyelik Ayarları</h2>
<head>
    <style>
        .btn1 {
            margin-top: 24px;
        }
    </style>
</head>

@* Manager/hesabiPasifeAl/id => id managerID ait olacak. Yönetici sisteme login olduğunda yöneticinin id'si buraya yazılacak.
    login işlemi yapılmadı için id dinamik gelmiyor.*@

<div>
    <a asp-controller="Manager" asp-action="hesabiPasifeAl" id="yoneticipasifeal"  class="btn btn-success btn1">Hesabı Pasife Alma</a>

</div>

<script type="text/javascript">
    $(function () {

        $("#yoneticipasifeal").click(function () {

            toastr.success("Yönetici tarafından, Yönetici ve yöneticiye ait tüm personel hesapları pasif hale geçmiştir.", "Uyarı!");
            toastr.options = {
                "timeOut":"8000",
                "showDuration": "8000",
                "hideDuration": "8000",
                "progressBar": true
            }
        });
    });
</script>